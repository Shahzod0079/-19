<Page x:Class="Практическая_19.Pages.Afisha.Items.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Афиша"
      Loaded="Page_Loaded" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" x:Name="tbTitle" 
                   Text="Добавление в афишу" FontSize="18" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Кинотеатр:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbKinoteatrs" Grid.Row="1" Grid.Column="1" 
                  DisplayMemberPath="Name" SelectedValuePath="Id" Margin="5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Фильм:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtFilm" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Время:" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpDate" Grid.Row="3" Grid.Column="1" Margin="5,5,70,5"/>
        <TextBox x:Name="txtTime" Grid.Row="3" Grid.Column="1" Text="19:00" Margin="5,5,5,5" Width="60" HorizontalAlignment="Right"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Цена:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPrice" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20">
            <Button x:Name="btnSave" Content="Сохранить" Width="80" Margin="5" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" Width="80" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
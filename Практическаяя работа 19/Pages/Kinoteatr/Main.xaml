<Page x:Class="Практическая_19.Pages.Kinoteatr.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Кинотеатры"
      Loaded="Page_Loaded" Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Кинотеатры" FontSize="20" FontWeight="Bold"/>

        <DataGrid x:Name="dgKinoteatrs" Grid.Row="1" Margin="0,10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Залы" Binding="{Binding HallCount}" Width="100"/>
                <DataGridTextColumn Header="Места" Binding="{Binding SeatCount}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnAdd" Content="Добавить" Width="80" Margin="5" Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Изменить" Width="80" Margin="5" Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Удалить" Width="80" Margin="5" Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
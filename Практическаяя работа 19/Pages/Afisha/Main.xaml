<Page x:Class="Практическая_19.Pages.Afisha.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Афиша"
      Loaded="Page_Loaded" Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Афиша" FontSize="20" FontWeight="Bold"/>

        <DataGrid x:Name="dgAfishas" Grid.Row="1" Margin="0,10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Кинотеатр" Binding="{Binding KinoteatrName}" Width="150"/>
                <DataGridTextColumn Header="Фильм" Binding="{Binding FilmName}" Width="200"/>
                <DataGridTextColumn Header="Время" Binding="{Binding SessionTime, StringFormat='dd.MM.yyyy HH:mm'}" Width="150"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding TicketPrice, StringFormat='C2'}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnAdd" Content="Добавить" Width="80" Margin="5" Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Изменить" Width="80" Margin="5" Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Удалить" Width="80" Margin="5" Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>